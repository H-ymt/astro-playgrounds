---
import Container from '../components/Container.astro'
import Layout from '../layouts/Layout.astro'

const pageList = [
  {
    title: '<dialog>タグを使用したモーダル',
    href: '/dialog',
  },
  {
    title: 'Anchor Positioning',
    href: '/anchor-positioning',
  },
  {
    title: '<details>タグを使用した排他的アコーディオン',
    href: '/accordion',
  },
]
---

<Layout>
  <Container class="container">
    <ul class="list">
      {
        pageList.map((page) => (
          <li class="item">
            <a href={page.href} class="pageLink">
              {page.title}
            </a>
          </li>
        ))
      }
    </ul>

    <style>
      .background {
        position: fixed;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        filter: blur(100px);
      }

      .container {
        padding-block: 2rem;
      }

      .list {
        display: grid;
        gap: 0.5rem;
        padding-block: 1rem;
        padding-left: 1.25rem;
      }

      .pageLink {
        padding-block: 0.5rem;
        color: var(--color-text-base);
      }
    </style>
  </Container>
</Layout>
